<% provide(:title, 'Show user') %>

<div id="centered">
  <% if accessible?(@user) or admin?(current_user) %>
    <% if @user.nil? %>
      User with <%= params[:id].nil? ? "_nil_" : params[:id] %> does not exist!
    <% else %>
      <h1>Current User</h1>
      <table id="user-show-table">
        <tr>
          <td>id</td>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <td>name</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td>email</td>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <td>password digest</td>
          <td><%= @user.password_digest %></td>
        </tr>
        <tr>
          <td>admin?</td>
          <td><%= @user.admin? %></td>
        </tr>
        <tr>
          <td>created at</td>
          <td><%= @user.created_at %></td>
        </tr>
        <tr>
          <td>updated at</td>
          <td><%= @user.updated_at %></td>
        </tr>
      </table>
    <% end %>
  <% else %>
    This is not you! You cannot invade other peoples privacy like that!
  <% end %>
</div>